{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["src/**/*", "typechain-types/**/*", "scripts/utils/**/*"],
	"exclude": ["node_modules", "dist", "test"]
}
